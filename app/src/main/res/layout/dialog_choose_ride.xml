<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:uber="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/optimal_uber"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/uber"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="Uber" />

            <TextView
                android:id="@+id/closest_uber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Closest scooter: 12:38 PM" />

            <TextView
                android:id="@+id/duration_uber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Destination arrival: 12:44 PM" />

            <TextView
                android:id="@+id/cost_uber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estimated cost $1.15" />

        </LinearLayout>

        <Button
            android:id="@+id/uber_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="Uber&#10;app"
            android:background="@drawable/filtered_off"
            android:textColor="@color/textPrimary" />

        <!--TODO:fix uber look-->
        <!--<com.uber.sdk.android.rides.RideRequestButton
            android:id="@+id/uber_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            uber:ub__style="white"
            android:background="@drawable/filtered_off" />-->

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/optimal_lyft"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/lyft"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="Lyft" />

            <TextView
                android:id="@+id/closest_lyft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Closest scooter: 12:38 PM" />

            <TextView
                android:id="@+id/duration_lyft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Destination arrival: 12:44 PM" />

            <TextView
                android:id="@+id/cost_lyft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estimated cost $1.15" />

        </LinearLayout>

        <Button
            android:id="@+id/lyft_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="Lyft&#10;app"
            android:background="@drawable/filtered_off"
            android:textColor="@color/textPrimary" />

        <!--<com.lyft.lyftbutton.LyftButton
            android:id="@+id/lyft_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="Open&#10;app"
            android:background="@drawable/filtered_off"
            android:textColor="@color/textPrimary" />-->

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/optimal_bird"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/bird"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="Bird" />

            <TextView
                android:id="@+id/closest_bird"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Closest scooter: 12:40 PM" />

            <TextView
                android:id="@+id/duration_bird"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Destination arrival: 12:46 PM" />

            <TextView
                android:id="@+id/cost_bird"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estimated cost $1.65" />

        </LinearLayout>

        <Button
            android:id="@+id/show_birds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="Show&#10;scooters"
            android:background="@drawable/filtered_off"
            android:textColor="@color/textPrimary" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/optimal_lime"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
